let raceNumber = Math.floor(Math.random()*1000);
let runnerRegistered = true
let runnerAge = 18


if (runnerRegistered === false) {
  raceNumber+=1000
}
if (runnerAge>=18 && runnerRegistered) {
  console.log('Great to hear!  The race starts at 9:30am  Your race number is ' + raceNumber + '!')
} else if (runnerRegistered || runnerAge>=18){
  console.log('You gotta race at 11am and you are race number ' + raceNumber +'!')
} else if (runnerAge<18 && runnerRegistered === false){
  console.log('Your race starts at 12:30pm and your race number is ' + raceNumber +'!')
} else {
  console.log('Please see the registration desk.')
}
